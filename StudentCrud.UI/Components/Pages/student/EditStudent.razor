@page "/editstudent/{studentId:int}"
@inject StudentCrud.Services.Service.StudentService _studentService
@inject NavigationManager _navigationManager


<h1>Edit Student</h1>

@if (isLoading)
{
            <p><em>Loading...</em></p>
}
else if (StudentObj is null)
{
            <p>Student not found.</p>
}
else
{
            <EditForm Model="@StudentObj" OnSubmit="@HandleSubmit" FormName="editStudentForm">

                <dl class="dl-horizontal">
                   
                    <dt>Full Name:</dt>
                    <dd><InputText @bind-Value="StudentObj.FullName" /></dd>

                    <dt>User Name:</dt>
                    <dd><InputText @bind-Value="StudentObj.UserName" /></dd>

                    <dt>User Email:</dt>
                    <dd><InputText @bind-Value="StudentObj.UserEmail" /></dd>

                    <dt>Phone:</dt>
                    <dd><InputText @bind-Value="StudentObj.Phone" /></dd>
                </dl>

                <button type="submit" class="btn btn-primary">Save Changes</button>
                <button type="button" class="btn btn-secondary ml-2" @onclick="Cancel">Cancel</button>
            </EditForm>
}



